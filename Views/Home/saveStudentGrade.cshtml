
@{
    ViewBag.Title = "تسجيل بيانات الطالب";
}

<div class="page-content-wrapper">
    <div class="page-content">
        <div class="container">
            <div class="page-content-inner">
                <div class="row">
                    <div class="col-md-12">

                        <div class="portlet light">
                            <div class="portlet-title">
                                <div class="caption font-red-sunglo">
                                    <i class="icon-settings font-red-sunglo"></i>
                                    <span class="caption-subject bold uppercase"> بيانات الطالب</span>
                                </div>

                            </div>

                            <div class="portlet-body form">
                                <div class="form-body">

                                    <div class="form-horizontal">

                                        @if (@ViewBag.AddError != null)
                                        {
                                            <div class="alert alert-danger bold" role="alert">
                                                @ViewBag.AddError
                                            </div>
                                        }


                                        <input type="hidden" id="id" name="id" value="@ViewBag.id" />
                                        <div class="row">
                                            <div class="form-group col-md-4">
                                                <div class="col-md-3 labelleft">
                                                    <label>رقم الجلوس</label>
                                                </div>
                                                <div class="col-md-9">
                                                    <input type="text" readonly id="seat_number" name="seat_number" value="@ViewBag.StudentId" class="form-control" />
                                                </div>

                                            </div>
                                            <div class="form-group col-md-4">
                                                <div class="col-md-3 labelleft">
                                                    <label>الاسم</label>
                                                </div>
                                                <div class="col-md-9">
                                                    <input type="text" required id="name" name="name" class="form-control" />
                                                </div>

                                            </div>
                                            <div class="form-group col-md-4">
                                                <div class="col-md-3 labelleft">
                                                    <label>السنة</label>
                                                </div>
                                                <div class="col-md-9">
                                                    <input type="text" required id="count" name="count" class="form-control" />
                                                </div>

                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-md-4">
                                                <div class="col-md-3 labelleft">
                                                    <label>الشهادة</label>
                                                </div>
                                                <div class="col-md-9">
                                                    <input type="text" required id="destination" name="destination" class="form-control" />
                                                </div>

                                            </div>
                                            <div class="form-group col-md-4">
                                                <div class="col-md-3 labelleft">
                                                    <label>الشعبة</label>
                                                </div>
                                                <div class="col-md-9">
                                                    <input type="text" required id="destination" name="destination" class="form-control" />
                                                </div>

                                            </div>
                                            <div class="form-group col-md-4">
                                                <div class="col-md-3 labelleft">
                                                    <label>الدور</label>
                                                </div>
                                                <div class="col-md-9">
                                                    <input type="text" required id="destination" name="destination" class="form-control" />
                                                </div>

                                            </div>
                                            
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-md-1">
                                                <div class="col-md-12">
                                                    <button id="save" class="btn blue"> حفظ </button>
                                                </div>
                                            </div>
                                            <div class="form-group col-md-1">
                                                <div class="col-md-12">
                                                    <a href="@Url.Action("Documents", "Home")" id="close" class="btn green">إلغاء </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/sweetalert2@10.js"></script>
