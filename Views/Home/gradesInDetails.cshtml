    <script src="~/Scripts/jquery/jquery.min.js"></script>


    <style type="text/css">
        table {
            border: 2px solid;
            padding: 10px;
            resize: both;
        }

        .circle {
            border: 2px solid red;
            background-color: #FFFFFF;
            height: 50px;
            border-radius: 50%;
            width: 60px;
        }

        * {
            font-family: 'DroidArabicKufi';
        }
    </style>
    <link href="~/Content/MainStyle.css" rel="stylesheet" />
</head>

<body class="page-container-bg-solid page-md">

    <div class="page-header">
        <!-- BEGIN HEADER TOP -->
        <div class="page-header-top">
            <div class="container">
                <div class="page-logo">
           <img title="وزارة التربية و التعليم" src="~/Images/ministryofeducation.jpg" alt="logo" class="logo-default"><br />
        </div>
                <table style="width:100%;font-size:15px;">
                    <tr>
                        <td class="bold" width="30%">
                            وزارة التربية و التعليم<br />
                            الإدارة العامة للإمتحانات<br />
                            قسم السجلات
                        </td>
                        <td class="bold" width="40%" style="font-size: 25px;text-align: center;">
                            <span style="padding: 5px;">كشف درجات</span>

                        </td>
                        <td class="bold" width="30%">
                            <span class="bold">رقم القيد</span>: @Model.unique_registration<br />
                            <span class="bold">التاريخ</span>: @Model.date
                        </td>
                    </tr>

                </table>
    
        
                <a href="javascript:;" class="menu-toggler"></a>
            
            </div>
        </div>

    </div>



    <div class="page-content">

        <div class="page-content-inner">
            <div class="row">
                <div class="col-md-12">

        
                        <div class="portlet-title">

                
                            <table style="width:100%;font-size:17px;line-height: 1.5">
                             
                                <tr>
                                    <td colspan="2"><span class="bold">بالبحث فى السجلات وجد أن أسم الطالب</span>/ @Model.student_name</td>
                                    <td><span class="bold">برقم جلوس</span>/ @Model.seat_id</td>
                                </tr>
                                <tr>
                                    <td colspan="2">
                                        <span class="bold">
                                            من بين 
                                            @if (Model.total_grade < Model.min_grade)
                                            {
                                                <span style="color:red;">الراسبين</span>
                                            }
                                            else
                                            {
                                                <span>الناجحين</span>
                                            }</span></td>
                                                    <td><span class="bold">الدور</span>/ @Model.eldoor</td>
                                                </tr>
                                <tr>
                                    <td width="35%"><span class="bold">من مدرسة</span>/ @Model.school_name</td>
                                    <td width="35%"><span class="bold">سنة</span>/ @Model.year</td>
                                    <td width="30%"><span class="bold">الإدارة</span>/ @Model.section</td>
                                </tr>
                                <tr>
                                    <td><span class="bold">و قد حصل فى هذا الأمتحان على الدرجات الأتيه</span>:-</td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            </table>
                            <br />
                            <table style="width:100%;font-size:20px;text-align:center;" border="1" >
                              

                                    <tr height="35px" style="font-weight:bold;">
                                        <td>المادة</td>
                                        <td>النهاية الكبرى</td>
                                        <td>النهاية الصغرى</td>
                                        <td>درجة الطالب</td>
                                    </tr>

                                    <tbody>
                                        @foreach (var row in @Model.coursesWithGradesMain)
                                        {
                                            <tr height="30">
                                                <td>@row.course_name</td>
                                                <td>@row.max_grade</td>
                                                <td>@row.min_grade</td>
                                                @if (row.grade1 < row.min_grade)
                                                {
                                                    <td><span class="circle">@row.grade1</span></td>
                                                }
                                                else
                                                {
                                                    <td>@row.grade1</td>
                                                }
                                            </tr>
                                        }
                                        <tr style="border:double; font-weight: bold;" height="40">
                                            <td>المجموع الكلى</td>
                                            <td>@Model.max_grade</td>
                                            <td>@Model.min_grade</td>
                                            @if (Model.total_grade < Model.min_grade)
                                            {
                                                <td><span class="circle">@Model.total_grade</span></td>
                                            }
                                            else
                                            {
                                                <td><span>@Model.total_grade</span></td>
                                            }
                                        </tr>
                                        @foreach (var row in @Model.coursesWithGradesOptional)
                                        {
                                            <tr height="30">
                                                <td>@row.course_name</td>
                                                <td>@row.max_grade</td>
                                                <td>@row.min_grade</td>
                                                @if (row.grade1 < row.min_grade)
                                                {
                                                    <td><span class="circle">@row.grade1</span></td>
                                                }
                                                else
                                                {
                                                    <td>@row.grade1</td>
                                                }
                                            </tr>
                                        }
                                    </tbody>
                                
                            </table>
                            <br />
                            <div>
                                <table style="width:100%;font-size:17px;line-height: 1.5">
                                    <tr>
                                        <td width="100%">و قد أستخرج هذا البيان لتقديمه إلى: @Model.to_destination</td>

                                    </tr>
                                    <tr>
                                        <td width="100%"><span>بناء على طلب السيد</span>: @Model.student_name</td>

                                    </tr>
                                    <tr>
                                        <td width="100%">بعد سدادالرسم المطلوب وقدره <span>@Model.price بحوالة رقم <span>@Model.transfer_number</span></span></td>

                                    </tr>
                                    <tr>
                                        <td width="100%"><span>و على الجهه المختصة التحقق من أن صاحب البيان هو الشخص المدون أسمه فيه</span> .</td>
                                    </tr>
                                    <tr>
                                        <td width="100%">
                                            <span>تحريرا فى</span>: @Model.date
                                        </td>
                                    </tr>

                                </table>
                            </div>
                            <table style="width:100%;font-size:17px;margin-top:10px;">
                                    <tfoot>
                                        <tr style="text-align:center;">
                                            <td width="35%">كتبه</td>
                                            <td width="35%">راجعه</td>
                                            <td width="35%">مدير إدارة السجلات</td>
                                        </tr>
                                        <tr>
                                            <td colspan="3">&nbsp;</td>
                                        </tr>
                                        <tr>
                                            <td colspan="3">&nbsp;</td>
                                        </tr>
                                    </tfoot>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>




    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
