    <link href="~/Scripts/jquery.dataTables.css" rel="stylesheet" />


    <link rel="shortcut icon" href="favicon.ico" />

    <!-- BEGIN GLOBAL MANDATORY STYLES -->
    <link href="~/Content/need/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/multiselect/select2.min.css" rel="stylesheet" />
    <link href="~/Content/need/select2-bootstrap.min.css" rel="stylesheet" />
