<script>
    var datatable;
    
    $(document).ready(function () {
        datatable = $('#data_table')
            .DataTable({
                "sAjaxSource": "/Users/Index",
                "bServerSide": true,
                "bProcessing": true,
                "bSearchable": true,
                "stateSave": false,
                //"order": [[1, 'asc']],
                "language": {
                    "sEmptyTable": "ليست هناك بيانات متاحة في الجدول",
                    "sLoadingRecords": "جارٍ التحميل...",
                    "sProcessing": "جارٍ التحميل...",
                    "sLengthMenu": "أظهر _MENU_ مدخلات",
                    "sZeroRecords": "لم يعثر على أية سجلات",
                    "sInfo": "إظهار _START_ إلى _END_ من أصل _TOTAL_ مدخل",
                    "sInfoEmpty": "يعرض 0 إلى 0 من أصل 0 سجل",
                    "sInfoFiltered": "(منتقاة من مجموع _MAX_ مُدخل)",
                    "sInfoPostFix": "",
                    "sSearch": "ابحث:",
                    "sUrl": "",
                    "oPaginate": {
                        "sFirst": "الأول",
                        "sPrevious": "السابق",
                        "sNext": "التالي",
                        "sLast": "الأخير"
                    },
                    "oAria": {
                        "sSortAscending": ": تفعيل لترتيب العمود تصاعدياً",
                        "sSortDescending": ": تفعيل لترتيب العمود تنازلياً"
                    }
                },
                "columns": [
                    {
                        "data": "id",
                        "autoWidth": true,
                        "searchable": true
                    },
                    {
                        "data": "IUser_Name",
                        "autoWidth": true,
                        "searchable": true
                    },
                    {
                        "data": "IUser_Password",
                        "autoWidth": true,
                        "searchable": true
                    },
                    {
                        "data": "IUser_Type", "name": "IUser_Type",
                        fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                            var html = "";
                            if (oData.IUser_Type == 1)
                                html += "بحث و طباعة";
                            else if (oData.IUser_Type == 2)
                                html += "تسجيل دفتر";
                            else if (oData.IUser_Type == 3)
                                html += "مدير النظام";
                            $(nTd).html("<span class='action-column'>" + html + "</span>");
                        }
                    },
                    {
                        "data": "IUser_Enabled", "name": "IUser_Enabled",
                        fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                            var html = "";
                            if (oData.IUser_Enabled)
                                html += "نعم";
                            else
                                html += "لا";

                            $(nTd).html("<span class='action-column'>" + html + "</span>");
                        }
                    },
                    {
                        "data": "id", "name": "id",
                        fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                            var html = "<a title='تفاصيل' href='javascript:void(0);' class='edit' data-id='" + oData.id + "' ><span class='fa fa-edit' ></span></a>&nbsp;";
                            html += "<a title='حذف' href='javascript:void(0);' class='delete' data-id='" + oData.id + "'  ><span class='fa fa-trash' ></span></a>";
                            $(nTd).html("<span class='action-column'>" + html + "</span>");
                        }
                    },

                ]
            });

        $(".dataTables_filter").hide();
        $(".dataTables_length").hide();

        $(document).on("click", "#action", function () {

        var TeamDetailPostBackURL = '/Users/saveUser';
        var user = {};
        //var id = $('#id').val();
         user.IUser_Name = $('#IUser_Name').val();
         user.IUser_Password = $('#IUser_Password').val();
         user.IUser_Type = $('#IUser_Type').val();
         user.IUser_Enabled = $('#IUser_EnabledE').is(":checked");
        $.ajax({
            type: "POST",
            url: '@Url.Action("saveUser", "Users")',
            contenttype: "application/json; charset=utf-8",
            data: user ,
            datatype: "json",
            headers: {
                'X-CSRF-TOKEN': $('meta[name="csrf-token"]').attr('content')
            },
            success: function (json) {
                datatable.draw();
                //drawtable();
                $('#adduser_modal').modal('hide');
            },
            error: function () {
                alert("Dynamic content load failed.");
            }
        });
        });

        $(document).on("click", ".delete", function () {
        var $buttonClicked = $(this);
        var id = $buttonClicked.attr('data-id');
        var options = { "backdrop": "static", keyboard: true };
        Swal.fire({
            title: 'هل أنت متأكد؟',
            text: "البيانات المحذوفة لا يمكن أسترجاعها!",
            icon: 'warning',
            showCancelButton: true,
            cancelButtonText: 'لا!',
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'نعم!'
        }).then((result) => {
            if (result.isConfirmed) {

                $.ajax({
                    type: "GET",
                    url: '@Url.Action("deleteUser","Users")',
                    contentType: "application/json; charset=utf-8",
                    data: { "Id": id },
                    datatype: "json",
                    success: function (data) {
                        datatable.draw();

                    },
                    error: function () {
                        alert("Dynamic content load failed.");
                    }
                });

            }
        })
        });
        function showModal(id = 0) {
            var TeamDetailPostBackURL = '/Users/manageUser';
            var options = { "backdrop": "static", keyboard: true };
            $.ajax({
                type: "GET",
                url: TeamDetailPostBackURL,
                contentType: "application/json; charset=utf-8",
                data: { "Id": id },
                datatype: "json",
                success: function (data) {
                    debugger;
                    $('#myModalContent').html(data);
                    $('#myModal').modal(options);
                    $('#myModal').modal('show');
                    $('.modal-backdrop').removeClass("modal-backdrop");
                },
                error: function () {
                    alert("Dynamic content load failed.");
                }
            });
        }
        $(document).on("click", ".edit", function () {

            var TeamDetailPostBackURL = '/Users/manageUser';

            var $buttonClicked = $(this);
            var id = $buttonClicked.attr('data-id');
            showModal(id);

        });

        $(document).on("click", "#add_user", function () {
           // $("#adduser_modal").modal('show');
            var TeamDetailPostBackURL = '/Users/manageUser';
            showModal();

            
    });
        
    });
</script>


